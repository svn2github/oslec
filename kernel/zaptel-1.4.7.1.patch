+    *psample++ = rxlin;
+
+    // sample collection ping-pong buffer logic
+
+    samples++;
+    if (samples >= SAMPLE_BUF_SZ) {
+      // time to swap buffers
+      samples = 0;
+
+      if (sample_state == SAMPLE_PING) {
+       sample_state = SAMPLE_PONG;
+       psample = pong;
+      }
+      else {
+       sample_state = SAMPLE_PING;
+       psample = ping;
+      }
+      wake_up_interruptible(&sample_wait);
+    }
+  }
